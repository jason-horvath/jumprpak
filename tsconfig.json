{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": "src",
    "paths": {
      "_config/*": ["config/*"],
      "_controllers/*": ["controllers/*"],
      "_http/*": ["http/*"],
      "_models": ["models/index.ts"],
      "_models/*": ["models/*"],
      "_routes/*": ["routes/*"],
      "_services/*": ["services/*"],
      "_utility/*": ["utility/*"]
    },
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["src/**/*"]
}
